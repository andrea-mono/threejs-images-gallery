{
    "compilerOptions": {
        "target": "es5",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": ["ESNext", "DOM"],
        "moduleResolution": "Node",
        "strict": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "noEmit": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "skipLibCheck": true,
        "paths": {
            "~components/*": ["./src/components/*"],
            "~utils/*": ["./src/utils/*"],
            "~types": ["./src/types.ts"]
        }
    },
    "include": ["src"]
}
